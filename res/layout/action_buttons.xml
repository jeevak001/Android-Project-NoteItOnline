<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:background="#0b6257"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/add_note"
                android:layout_marginRight="5dp"
                android:background="@drawable/red_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:src="@drawable/add_note"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Add New Note"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/create_category"
                android:background="@drawable/red_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:src="@drawable/cat_add"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Add Category"/>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/delete_category"
                android:layout_marginRight="5dp"
                android:background="@drawable/red_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:src="@drawable/cat_edit"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Edit Category"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/alarm_notes"
                android:background="@drawable/red_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:src="@drawable/alarm_ok"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Alarm Notes"/>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/put_button"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/red_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:src="@drawable/upload"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Upload"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/get_button"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:src="@drawable/download"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#FEFEFE"
                    android:textAllCaps="false"
                    android:text="Sync Download"/>



            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>