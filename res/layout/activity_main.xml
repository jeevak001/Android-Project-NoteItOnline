<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FEFEFE"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:background="#0b6257"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="22sp"
                    android:paddingRight="5dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="0dp"
                    android:background="#0b6257"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Categories"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Pick a category"/>

            </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_button_selector"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/actions"
                        android:layout_marginRight="5dp"
                        android:textColor="#FEFEFE"
                        android:textAllCaps="false"
                        android:text="Actions"/>

                </LinearLayout>






            </LinearLayout>






            <ListView
                android:id="@+id/category_list"
                android:background="#FEFEFE"
                android:paddingRight="0dp"
                android:paddingTop="10dp"
                android:paddingLeft="0dp"
                android:paddingBottom="0dp"
                android:scrollbars="none"
                android:divider="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/substitute_categories"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="No categories available. First create a category"/>


            </LinearLayout>



        </LinearLayout>


    </android.support.design.widget.NavigationView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_viewr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FEFEFE"
        android:layout_gravity="right"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:background="#0b6257"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="22sp"
                        android:paddingRight="5dp"
                        android:paddingTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="0dp"
                        android:background="#0b6257"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Actions"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="#FEFEFE"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Pick a action"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:background="#0b6257"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="0dp"
                            android:id="@+id/add_note"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/red_button_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:textStyle="bold"
                                android:padding="2dp"
                                android:src="@drawable/add_note"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Download"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Add New Note"/>



                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:id="@+id/create_category"
                            android:background="@drawable/red_button_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:textStyle="bold"
                                android:padding="4dp"
                                android:src="@drawable/cat_add"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Download"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Add Category"/>



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:id="@+id/delete_category"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/red_button_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:textStyle="bold"
                                android:padding="4dp"
                                android:src="@drawable/cat_edit"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Download"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Edit Category"/>



                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:id="@+id/alarm_notes"
                            android:background="@drawable/red_button_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:textStyle="bold"
                                android:padding="3dp"
                                android:src="@drawable/alarm_ok"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Download"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Alarm Notes"/>



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:id="@+id/put_button"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/red_button_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:textStyle="bold"
                                android:padding="2dp"
                                android:src="@drawable/upload"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Download"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Upload"/>



                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:id="@+id/get_button"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/red_button_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:textStyle="bold"
                                android:padding="2dp"
                                android:src="@drawable/download"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Download"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:textColor="#FEFEFE"
                                android:textAllCaps="false"
                                android:text="Sync Download"/>



                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>







            </LinearLayout>










        </LinearLayout>


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
