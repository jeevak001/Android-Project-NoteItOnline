<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="0dp"
    android:paddingTop="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:elevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="30dp"
                    android:padding="3dp"
                    android:id="@+id/note_alarm"
                    android:src="@drawable/alarm_ok"
                    android:layout_marginRight="5dp"
                    android:layout_height="30dp"
                    android:background="@drawable/green_button"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="30dp"
                android:id="@+id/note_color"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#c76c76"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Sample Title"
                        android:textSize="16sp"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:id="@+id/note_title"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_height="match_parent">


                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/gold_button"
                                android:paddingRight="3dp"
                                android:paddingLeft="3dp"
                                android:textSize="14sp"
                                android:text="R0"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="#e65100"
                                android:id="@+id/note_rating"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:paddingTop="5dp"
                            android:id="@+id/edit_note"
                            android:src="@drawable/edit"
                            android:layout_marginRight="5dp"
                            android:layout_height="30dp"
                            android:background="@drawable/green_button_selector"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:padding="3dp"
                            android:id="@+id/delete_note"
                            android:src="@drawable/delete_white"
                            android:layout_height="30dp"
                            android:background="@drawable/red_button_selector"
                            android:layout_gravity="center"/>


                    </LinearLayout>



                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="Sample Title"
                    android:textSize="12sp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#9e9e9e"
                    android:gravity="center_vertical"
                    android:id="@+id/time"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="This is sample note"
                    android:textSize="14sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#9e9e9e"
                    android:id="@+id/notes_content"/>

            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>